<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/gallery_slider"
        android:layout_marginTop="32dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/back_button"
        android:layout_height="24dp"
        android:layout_width="24dp"
        android:src="@drawable/back_arrow"
        android:background="?android:attr/actionBarItemBackground"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/go_back_to_camera"/>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="16dp"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/delete_icon"
            android:layout_height="24dp"
            android:layout_width="24dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/delete"
            android:background="?android:attr/actionBarItemBackground"
            android:contentDescription="@string/delete_file"/>

        <ImageView
            android:id="@+id/file_info"
            android:layout_height="24dp"
            android:layout_width="24dp"
            android:layout_marginEnd="14dp"
            android:layout_marginStart="6dp"
            android:src="@drawable/info"
            android:background="?android:attr/actionBarItemBackground"
            android:contentDescription="@string/file_info"/>

        <ImageView
            android:id="@+id/share_icon"
            android:layout_height="24dp"
            android:layout_width="24dp"
            android:layout_marginEnd="14dp"
            android:layout_marginStart="6dp"
            android:src="@drawable/share"
            android:background="?android:attr/actionBarItemBackground"
            android:contentDescription="@string/share_file"/>

    </LinearLayout>

</RelativeLayout>